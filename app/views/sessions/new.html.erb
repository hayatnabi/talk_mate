<h4 class="ui center aligned medium icon header">
  <i class="circular blue power off tiny icon"></i>
</h4>
<div class="ui inverted light grey segment">
  <h2 class="ui center aligned large header">
    Log into <span style="color: white;">Talk</span><span style="color: skyblue;">Mate</span> - <em>a complete Chat App</em>
  </h2>
</div>
<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_for(:session, html: {class: "ui form", role: "form"}, url: login_path) do |f| %>
        <div class="field">
          <%= f.label :username, "Username" %>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: "Username" %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password, "Password" %>
          <div class="ui left icon input">
            <%= f.password_field :password, placeholder: "Password" %>
            <i class="key icon" onclick="togglePasswordVisibility()" style="cursor: pointer;"></i>
            <script>
              function togglePasswordVisibility() {
                const passwordField = document.querySelector('input[type="password"]');
                const type = passwordField.getAttribute('type') === 'password' ? 'text' : 'password';
                passwordField.setAttribute('type', type);
              }
            </script>
          </div>
        </div>
        <%= f.button "Login", class: "ui blue submit button" %>
      <% end %>
    </div>
    <div class="middle aligned column">
      <div class="ui big green button">
        <i class="user icon"></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>
