<div class="cursor-circle">
  <div class="cursor-dot"></div>
</div>
<style>
  .cursor-circle {
    position: fixed;
    width: 50px;
    height: 50px;
    border: 2px solid #d3d3d3; /* Light gray border */
    border-radius: 50%;
    pointer-events: none;
    transform: translate(-50%, -50%);
    z-index: 1000;
    transition: transform 0.1s ease;
  }

  .cursor-dot {
    position: absolute;
    width: 10px;
    height: 10px;
    background-color: #add8e6; /* Light blue dot */
    border-radius: 50%;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  .hide-cursor {
    display: none;
  }
</style>
<script>
  document.addEventListener("mousemove", (event) => {
          const cursorCircle = document.querySelector(".cursor-circle");
          cursorCircle.style.left = `${event.pageX}px`;
          cursorCircle.style.top = `${event.clientY}px`;
  });

  document.addEventListener("mouseover", (event) => {
          const cursorCircle = document.querySelector(".cursor-circle");
          if (event.target.classList.contains("chatroom-button") || event.target.classList.contains("get-started-button")) {
                  cursorCircle.classList.add("hide-cursor");
          }
  });

  document.addEventListener("mouseout", (event) => {
          const cursorCircle = document.querySelector(".cursor-circle");
          if (event.target.classList.contains("chatroom-button") || event.target.classList.contains("get-started-button")) {
                  cursorCircle.classList.remove("hide-cursor");
          }
  });
</script>
